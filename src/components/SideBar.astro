---
import { Icon } from "astro-icon";

const links: Array<{
  [key: string]: string;
}> = [
  {
    href: "https://linkedin.com/in/eva-afriana",
    target: "_blank",
    "aria-label": "LinkedIn",
    icon: "fa-brands:linkedin",
    title: "Go to my LinkedIn",
  },
  {
    href: "https://github.com/evafriana",
    target: "_blank",
    "aria-label": "GitHub",
    icon: "fa-brands:github",
    title: "Go to my GitHub",
  },
  {
    href: "https://www.youtube.com/channel/UCaOvehDmx4K2POFMOybuMSg",
    target: "_blank",
    "aria-label": "YouTube",
    icon: "fa-brands:youtube",
    title: "Go to my YouTube",
  },
  {
    href: "/rss.xml",
    target: "_blank",
    "aria-label": "RSS Feed",
    icon: "mdi:rss",
    title: "Projects RSS Feed",
  },
];
---

<div class="drawer-side bg-base-200">
  <label for="my-drawer" class="drawer-overlay bg-base-200"></label>
  <div class="menu p-4 overflow-y-auto w-[19rem] bg-base-200 text-base-content">
    <div class="w-fit">
      <a href="/">
        <div
          class="avatar transition ease-in-out w-1/2 hover:scale-[102%] block m-auto mt-3 mb-6"
        >
          <div>
            <img
              class="mask mask-circle"
              src="/assets/profile.png"
              alt="profile image"
            />
          </div>
        </div>
      </a>
    </div>
    <ul>
      <!-- Sidebar content here -->
      <li><a href="/">Home</a></li>
      <li><a href="/projects/1">Web Projects</a></li>
      <li><a href="/youtube">YouTube</a></li>
      <!-- <li><a href="/cv">CV</a></li> -->
      <li><a href="mailto:eva.afriana@outlook.com?subject=Hi!">Email Me</a></li>
    </ul>
    <div class="grow"></div>
    <div class="social-icons px-4 my-2 flex self-center">
      {
        links.map(({ icon, ...props }) => (
          <li>
            <a
              class="flex items-center justify-center w-14 h-14 p-4  rounded-full"
              {...props}
            >
              <Icon class="h-full" name={icon} />
            </a>
          </li>
        ))
      }
    </div>
  </div>
</div>
